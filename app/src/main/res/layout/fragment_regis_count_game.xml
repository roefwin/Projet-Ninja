<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Regis.RegisCountGameFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/countdown1"
        android:layout_below="@+id/btn_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/countdown2"
        android:layout_below="@+id/btn_player2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/countdown3"
        android:layout_above="@+id/btn_player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/countdown4"
        android:layout_above="@+id/btn_player4"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <Button
        android:id="@+id/btn_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/activity_horizontal_margin"></Button>
    <Button
        android:id="@+id/btn_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textSize="@dimen/activity_horizontal_margin"></Button>
    <Button
        android:id="@+id/btn_player3"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/activity_horizontal_margin"></Button>
    <Button
        android:id="@+id/btn_player4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="0"
        android:textSize="@dimen/activity_horizontal_margin"></Button>


    <TextView
        android:id="@+id/textwinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:scrollbarStyle="insideInset"
        android:textColor="#00FF00"
        android:textStyle="bold"
        android:layout_centerInParent="true">

    </TextView>
    <TextView
        android:id="@+id/textlooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_below="@+id/textwinner">
    </TextView>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:layout_centerInParent="true"
        android:background="@color/blue"
        android:visibility="gone"
        android:layout_below="@+id/textlooser">

    </Button>


</RelativeLayout>